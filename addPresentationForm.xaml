<Window x:Class="appinion_add_on.AddPresentationForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:appinion_add_on"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" HorizontalAlignment="Center" VerticalAlignment="Center" ResizeMode="NoResize" Title="Dodaj Prezenztaciju" Width="200" Height="200">
    <Grid>
        <Label x:Name="label" Content="Dodaj prezentaciju u projekat" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="presentationIdText" HorizontalAlignment="Center" Height="20" Margin="0,80,0,0" TextWrapping="Wrap" TextAlignment="Center" Text="" VerticalAlignment="Top" Width="120" MaxLength="5"/>
        <Button x:Name="button" Content="Dodaj" HorizontalAlignment="Center" Margin="0,128,0,0" VerticalAlignment="Top" Width="75" Cursor="Arrow" Click="button_Click"/>

    </Grid>
</Window>
